generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_LOCAL_URL")
}

model Transaction {
  id Int @id @default(autoincrement())

  seller_domain String
  kind          String

  invoice_number Int @default(0)

  amount Float
  total  Float @default(0.00)

  status String @default("PENDING")

  user_created String @default("")
  user_updated String @default("")

  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  @@map("transactions")
}
