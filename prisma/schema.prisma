generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// enum KindTransactionType {
//   wallet,
//   culqi,
//   bonus
// }

model Transaction {
  id Int @id @default(autoincrement())

  sellerDomain String
  kind          String

  invoiceNumber Int @default(0)

  amount Float
  total  Float @default(0.00)

  status String @default("PENDING")

  userCreated  String @default("")
  userUpdated String @default("")

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@map("transactions")
}
